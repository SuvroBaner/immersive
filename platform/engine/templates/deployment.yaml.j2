# Defines the API version for Deployments in Kubernetes
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ metadata.name }}
  namespace: production
  labels:
    app: {{ metadata.name }}
    owner: {{ metadata.owner }}
    managed-by: canvas-engine
spec:
  replicas: {{ spec.compute.autoscaling.min_replicas }}
  selector:
    matchLabels:
      app: {{ metadata.name }}
  template:
    metadata:
      labels:
        app: {{ metadata.name }}
    spec:
      # --- NEW: IAM Identity ---
      serviceAccountName: {{ metadata.name }}-sa
      
      # --- NEW: Pulling from Private ECR ---
      imagePullSecrets:
        - name: regcred

      # --- NEW: Enforce Non-Root (Matches Dockerfile) ---
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true

      containers:
        - name: {{ metadata.name }}
          image: {{ image_repo }}:{{ image_tag }}
          imagePullPolicy: Always
          ports:
            - containerPort: {{ spec.networking.port }}
          
          resources:
            requests:
              cpu: "{{ spec.compute.cpu_request }}"
              memory: "{{ spec.compute.memory_request }}"
            limits:
              cpu: "{{ spec.compute.cpu_limit }}"
              memory: "{{ spec.compute.memory_limit }}"
              {% if spec.compute.gpu %}
              nvidia.com/gpu: "1"
              {% endif %}

          readinessProbe:
            httpGet:
              path: {{ spec.networking.health_path }}
              port: {{ spec.networking.port }}
            initialDelaySeconds: 5
            periodSeconds: 10
          
          # --- NEW: Liveness Probe (Restarts dead apps) ---
          livenessProbe:
            httpGet:
              path: {{ spec.networking.health_path }}
              port: {{ spec.networking.port }}
            initialDelaySeconds: 15
            periodSeconds: 20

          env:
            - name: PORT
              value: "{{ spec.networking.port }}"
            {% if spec.env %}
            {% for key, value in spec.env.items() %}
            - name: {{ key }}
              value: "{{ value }}"
            {% endfor %}
            {% endif %}
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ metadata.name }}
  namespace: production
  labels:
    app: {{ metadata.name }}
    owner: {{ metadata.owner }}
    # Cost center is optional, so we default if missing
    cost-center: {{ metadata.cost_center | default('general') }}
    managed-by: canvas-engine
spec:
  # Autoscaling starts at the minimum replica count
  replicas: {{ spec.compute.autoscaling.min_replicas }}
  selector:
    matchLabels:
      app: {{ metadata.name }}
  template:
    metadata:
      labels:
        app: {{ metadata.name }}
        tier: {{ spec.tier | default('backend') }}
    spec:
      containers:
        - name: {{ metadata.name }}
          # image_repo and image_tag are injected by the Engine at runtime
          image: {{ image_repo }}:{{ image_tag }}
          imagePullPolicy: Always
          ports:
            - containerPort: {{ spec.networking.port }}
          
          # --- Resource Guardrails (Security & Stability) ---
          resources:
            requests:
              cpu: "{{ spec.compute.cpu_request }}"
              memory: "{{ spec.compute.memory_request }}"
            limits:
              cpu: "{{ spec.compute.cpu_limit }}"
              memory: "{{ spec.compute.memory_limit }}"
              {% if spec.compute.gpu %}
              # Canvas automatically handles the NVIDIA driver requirements
              nvidia.com/gpu: "1"
              {% endif %}

          # --- Health Checks (Reliability) ---
          readinessProbe:
            httpGet:
              path: {{ spec.networking.health_path }}
              port: {{ spec.networking.port }}
            initialDelaySeconds: 5
            periodSeconds: 10
          
          # --- Environment Variables ---
          env:
            # Standard Platform Env Vars
            - name: PORT
              value: "{{ spec.networking.port }}"
            
            # User-defined Env Vars from canvas.yaml
            {% if spec.env %}
            {% for key, value in spec.env.items() %}
            - name: {{ key }}
              value: "{{ value }}"
            {% endfor %}
            {% endif %}
            
            # Secrets would be injected here via ExternalSecretsOperator
            # (Simplified for this phase)